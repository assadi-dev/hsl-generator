{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "dialog:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-copy-file",
    "fs:allow-remove",
    {
      "identifier": "fs:scope",
      "allow": [
        "**/**"
      ]
    }
  ]
}